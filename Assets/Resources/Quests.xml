<?xml version="1.0" encoding="UTF-8"?>
<Quests>
    <Quest level="1">
        <Name>The Lost Treasure</Name>
        <Description>Explore the ancient ruins and retrieve the lost artifact.</Description>
        <Objectives>
            <Objective>
                <Description>Find the entrance to the ruins</Description>
                <Action>GO</Action>
                <Target>Entrance</Target>
                <XP>100</XP>
            </Objective>
            <Objective>
                <Description>Locate the hidden chamber</Description>
                <Action>GO</Action>
                <Target>Hidden Chamber</Target>
                <XP>150</XP>
            </Objective>
            <Objective>
                <Description>Retrieve the artifact</Description>
                <Action>TAKE</Action>
                <Target>Egyptian Artifact</Target>
                <XP>200</XP>
            </Objective>
        </Objectives>
    </Quest>
    <Quest level="2">
        <Name>Finding the Missing Amulet</Name>
        <Description>Search for the missing amulet of the royal family.</Description>
        <Objectives>
            <Objective>
                <Description>Speak to the royal advisor</Description>
                <Action>TALK</Action>
                <Target>Royal Advisor</Target>
                <XP>100</XP>
            </Objective>
            <Objective>
                <Description>Investigate the abandoned castle</Description>
                <Action>GO</Action>
                <Target>Abandoned Castle</Target>
                <XP>150</XP>
            </Objective>
            <Objective>
                <Description>Find the missing amulet in the castle</Description>
                <Action>TAKE</Action>
                <Target>Missing Amulet</Target>
                <XP>200</XP>
            </Objective>
        </Objectives>
    </Quest>
    <Quest level="3">
        <Name>Retrieve the Ancient Tome</Name>
        <Description>Find the ancient tome hidden deep within the forest.</Description>
        <Objectives>
            <Objective>
                <Description>Obtain the quest from the village elder</Description>
                <Action>TALK</Action>
                <Target>Village Elder</Target>
                <XP>100</XP>
            </Objective>
            <Objective>
                <Description>Locate the entrance to the forbidden forest</Description>
                <Action>GO</Action>
                <Target>Forest Entrance</Target>
                <XP>150</XP>
            </Objective>
            <Objective>
                <Description>Retrieve the ancient tome from the old shrine</Description>
                <Action>TAKE</Action>
                <Target>Ancient Tome</Target>
                <XP>200</XP>
            </Objective>
        </Objectives>
    </Quest>
</Quests>
